{% set pageNumber = { depth1: 1, depth2: 3, depth3: 2 } %}
{% set pageData = {
	title: "WA 인증 마크란?",
	description: "웹 접근성 인증 마크(wa)와 배경, 대상, 기대효과, 인증기관 정보를 제공하는 섹션입니다. ",
	keyword: "wcag, kwcag, Accessibility, Web accessibility, 접근성, 웹 접근성, 인증 마크",
	last_update: creation_date | date("YYYY-MM-DD")
} %}
{% set pageLayout = {
	mainClass: "waMark",
	type: "publishing",
	Info: true,
	note: false,
