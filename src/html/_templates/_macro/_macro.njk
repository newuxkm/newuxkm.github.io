<!-- 더보기 버튼 -->
{%- macro more_button(style="a", href="#") %}
<div class="more_link_box">
	{% if style === "a" -%}
	<a href="{{href}}" class="more_link"><i>더보기</i></a>
	{%- elif style === "button" -%}
	<button type="button" class="more_link"><i>더보기</i></button>
	{%- endif %}
</div>
{%- endmacro %}


<!-- board list item -->
{%- macro board_item(style="default", title="title", date="0000-00-00 00:00:00", content="content", answer="") %}
<li class="board_item {{ style }} {{ answer }}">
	<div class="tit_box">
		<p class="title">{{ title }}</p>
		{%- if date !== "" %}
		<p class="date">{{ date }}</p>
		{%- endif %}

		{%- if answer === "answer_waiting" %}
		<p class="answer">답변 대기 중</p>
		{%- elif answer === "answer_completed" %}
		<p class="answer">답변 완료</p>
		{%- endif %}
	</div>
	{%- if content !== "" %}
	<div class="con_box">
		<div class="content">
			{{ content }}
		</div>
	</div>
	{%- endif %}
</li>
{%- endmacro %}


<!-- board inquiry item -->
{%- macro inp_item(style="default", title="title", content="content") %}
<dl class="item">
	<dt>{{ title }}</dt>
	<dd>{{ content }}</dd>
</dl>
{%- endmacro %}


<!-- 회원가입 step -->
{%- macro join_step(step) %}
<ol>
	<li class="{% if step === 1 -%} active {%- endif %}"><p>가입자유형</p></li>
	<li class="{% if step === 2 -%} active {%- endif %}"><p>이용약관</p></li>
	<li class="{% if step === 3 -%} active {%- endif %}"><p>회원정보</p></li>
	<li class="{% if step === 4 -%} active {%- endif %}"><p>가입완료</p></li>
</ol>
<span class="dot"><i></i><i></i><i></i></span>
{%- endmacro %}



