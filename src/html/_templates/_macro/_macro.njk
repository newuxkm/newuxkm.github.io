
<!-- 상품 리스트 구조 -->
{%- macro product_item(image, discount, name, brand, price1, price2, choice=false) %}
<li class="lst_item">
	<a href="/pages/product/detail.html">
		<div class="thumb">
			<p class="img"><img src="{{ image }}" width="100%" height="auto"></p>
			<span class="discount">{{ discount }}</span>
			{%- if choice %}
			<label class="check">
				<input type="checkbox">
				<i>선택하기</i>
			</label>
			{%- endif %}
		</div>
		<div class="data">
			<p class="brand">{{ brand }}</p>
			<p class="name">{{ name }}</p>
			<p class="price_box">
				<span class="selling_price">{{ price1 }}</span>
				<span class="cost_price">{{ price2 }}</span>
			</p>
		</div>
	</a>
</li>
{%- endmacro %}


<!-- 카테고리 메뉴 -->
